    table {
        font-family: Calibri;
        font-size: 1.2em;
        width: 100%;
        display: table;
        border-collapse: separate;
        border: solid 1px #98BF21;
        background-color: white;
    }

    td, th {
        border: 1px solid #d4dbbf;
        padding: 3px 7px 2px;
    }
    /*Here we will add css for style webgrid*/
    .webgrid-table {
        font-family: Calibri;
        font-size: 1.2em;
        width: 100%;
        display: table;
        border-collapse: separate;
        border: solid 1px #98BF21;
        background-color: white;
    }

    table td, th {
        border: 1px solid #98BF21;
        padding: 3px 7px 2px;
    }

    table-header {
        background-color: #A7C942;
        color: #FFFFFF;
        padding-bottom: 4px;
        padding-top: 5px;
