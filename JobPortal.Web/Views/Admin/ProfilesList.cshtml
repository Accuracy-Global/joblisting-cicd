@*<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>*@
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<h2>ProfilesList</h2>
@{
    ViewBag.profiles = TempData["profiles"];
}
<div id="container-grid" class="table-responsive" style="table-layout:fixed;  width: 100%;">
    <table cellpadding="0" cellspacing="0">
        <tr>

            <th>Name</th>
            <th>Skills</th>
            <th>Emails</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
        @foreach (var itemss in ViewBag.profiles)
        {
            <tr>
                <td>@itemss.FirstName  @itemss.LastName </td>
                <td>@itemss.Title </td>
                <td>@itemss.Username </td>
                <td>@itemss.Mobile </td>
                <td>
                    <a href="#"><i class='fa fa-phone'></i></a> | <a href="#"><i class='fa fa-envelope'></i></a> | <a href="#"><i class='fa fa-comment'></i></a>
                </td>
</tr>
}
    </table>
</div>
