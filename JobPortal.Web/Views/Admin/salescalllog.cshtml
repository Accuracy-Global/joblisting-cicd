@model JobPortal.Web.Models.salescall
@{
    ViewBag.Title = "salescalllog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_MessagePartial")
@using (Html.BeginForm("salescalllog", "Admin", FormMethod.Post, new { Id = "JobPostForm", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-10">
            <div class="title-login">
                <h1 style="margin-top:-15px;">
                    SALES CALL LOG
                </h1>
            </div>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2">
            @Html.ActionLink("View Call Logs", "Salescall", "Admin", null, new { @class = "btn btn-info" })
        </div>
    </div>
    <div class="clear" style="height:15px"></div>
    @*@Html.ValidationSummary(true)*@

    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
                <label>Associate Name</label>
                <input class="form-control" type="text" name="associatename" />
                @Html.ValidationMessageFor(model => model.associatename, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
                <label>Company Name</label>
                <input class="form-control" type="text" name="CompanyName" />
                @Html.ValidationMessageFor(model => model.CompanyName, "" , new {@class="text-danger" })
            </div>
        </div>
    </div>

    <div class="clear" style="height:15px;"></div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
                <label>Phone</label>
                <input class="form-control" type="text" name="Phone" />
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" name="Email" />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" type="text" name="Name" />
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
                <label>Time Of Call</label>
                <input class="form-control" type="text" name="TimeOfCall" />
                @Html.ValidationMessageFor(model => model.TimeOfCall, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">

                <div class="form-group">
                    <label>Duration of Call</label>
                    <input class="form-control" type="text" name="DofCall" />
                    @Html.ValidationMessageFor(model => model.DofCall, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
                <label>Call Back Number</label>
                <input class="form-control" type="text" name="CallBackNo" />
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
                <label>Action To Be Taken</label>
                <input class="form-control" type="text" name="ActiontobeTaken" />
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
                <label>Notes</label>
                <textarea class="form-control" name="Notes"></textarea>
            </div>
        </div>
    </div>



    <div class="clear" style="height:15px;"></div>


    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 text-center">
            <input type="submit" value="Submit" class="btn btn-info submitjob" style="width:100px; margin-top:10px;" />
        </div>
    </div>

}

