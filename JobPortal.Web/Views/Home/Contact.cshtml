@model JobPortal.Web.Models.ContactModel

@{
    ViewBag.Title = "Contact Us";
    ViewBag.Description = "If you have any query related to our site, feel free to contact us. We have mentioned all the relevant contact information on the website.";
    ViewBag.Keywords = "Joblisting, Job Listing, Job Search, Latest Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="mapaddres" value='340 S Lemon Ave. #2774 Walnut United States 91789' />
<script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=false"> </script>
<script type="text/javascript">
    $(document).ready(function () {
        var addressStr = $("#mapaddres").val();
        if (addressStr != "") {
            initialize();
        }
        else {
            $("#googleMap").hide();
        }
    });
    var geocoder;
    var map;

    function initialize() {
        geocoder = new google.maps.Geocoder();
        var latlng = new google.maps.LatLng(39.232253, -101.704103);
        var mapOptions = {
            zoom: 15,
            center: latlng,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        }
        map = new google.maps.Map(document.getElementById("googleMap"), mapOptions);
        codeAddress();
    }
    function codeAddress() {
        var address = $("#mapaddres").val();
        geocoder.geocode({ 'address': address },
function (results, status) {
    if (status == google.maps.GeocoderStatus.OK) {
        map.setCenter(results[0].geometry.location);
        var marker = new google.maps.Marker({
            map: map,
            position: results[0].geometry.location
        });
    }
    else {
        //$("#map_canvas").html("Geocode was not successful for the following reason: " + status);
        $("#googleMap").hide();
    }
});
    }
</script>
<div class="section">
    <div class="clear" style="height:10px;"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="title-login"><h1>@ViewBag.Title</h1></div>
                <div class="title-login" style="color:red">All fields are mandatory.</div>
            </div>
        </div>
        @Html.Partial("_MessagePartial")
        <div class="clear" style="height:15px"></div>
        <div class="row">
            <div class="col-lg-5 col-md-5 col-sm-5">
                @using (Html.BeginForm("Contact", "Home"))
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.Subject) <small><span style="color:#808080">(Max. 50 Characters)</span></small>

                        @Html.TextBoxFor(model => model.Subject, new { placeholder = "SUBJECT", @class = "form-control", @maxlength = "50" })
                        @Html.ValidationMessageFor(model => model.Subject)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Message) <small><span style="color:#808080">(Max. 280 Characters)</span></small>

                        @Html.TextAreaFor(model => model.Message, new { placeholder = "YOUR MESSAGE", @style = "height:283px;", @maxlength="280", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Message)
                    </div>
                    <input type="submit" value="Send Message" class="btn btn-info" />
                }
            </div>
            <div class="col-lg-7 col-md-7 col-sm-7">
                <div class="clear" style="height:26px;"></div>
                <div id="googleMap" style="width:100%; min-width:256px; height:345px;"></div>
                <div class="clear"></div>
            </div>
        </div>

</div>
</div>