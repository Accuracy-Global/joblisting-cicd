<script>
    var page = 1;
    var pages = 1;
    $(document).ready(function () {
        $.post("/network/peopleyoumayknow", { pageNumber: page }, function (result) {
            if (result.length > 0) {
                var rows = result[0].MaxRows;
                pages = Math.ceil(rows / 9);
                $.each(result, function () {
                    this.authenticated = "@Request.IsAuthenticated";
                    this.role = "@user.Role.GetDescription()";
                    $("#ResultItem").tmpl(this).appendTo("#ResultArea");
                });
            }

            if (page < pages) {
                $("#ViewMore").removeClass("hide");
                $("#ViewMore").addClass("show");
            } else {
                $("#ViewMore").removeClass("show");
                $("#ViewMore").addClass("hide");
            }
        });

        $("#ViewMore").click(function () {
            if (page <= pages) {
                page++;
                $("#waitDialog").modal("show");
                $.post("/network/peopleyoumayknow", { pageNumber: page }, function (result) {
                    $("#waitDialog").modal("hide");
                    $.each(result, function () {
                        this.authenticated = "@Request.IsAuthenticated";
                        this.role = "@user.Role.GetDescription()";
                        $("#ResultItem").tmpl(this).appendTo("#ResultArea");
                    });
                });
            }

            if (page < pages) {
                $("#ViewMore").removeClass("hide");
                $("#ViewMore").addClass("show");
            } else {
                $("#ViewMore").removeClass("show");
                $("#ViewMore").addClass("hide");
            }
        });

        $("#ResultArea").on("click", ".rmv", function () {
            $("#waitDialog").modal("show");
            $.post('@Url.Action("Remove", "JsonHelper")', { Id: $(this).data('pid') },
                function (result) {
                    $("#waitDialog").modal("hide");
                    if (result == "Success") {
                        window.location.reload();
                    }
                }
            );
        });
    })
</script>
