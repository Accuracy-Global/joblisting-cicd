@{
    ViewBag.Title = "Upload Bulk Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="title-login">
    <h1 style="margin-top:-15px">List Bulk Jobs</h1>
    Manage bulk jobs list here
</div>
@Html.Partial("_MessagePartial")
<div class="clear" style="height:15px"></div>
@using (Html.BeginForm("UploadJobs", "Employer", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return validate();" }))
{
    <div class="row">
        <div class="col-lg-7 col-md-7 col-sm-7">
            <input id="file" name="file" type="file" title="Upload xls file containing jobs." style="width:100%" onchange='return validate();' />
        </div>
        <div class="col-lg-5 col-md-5 col-sm-5">
            <input type="submit" value="Upload" class="btn btn-info" title="Upload Excel File Only" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12" style="padding-top:10px">
            @Html.ActionLink("Download", "DownloadTemplate") bulk jobs template.(<span class="required">Maximum 100 Jobs are allowed to list via bulk Jobs </span>)
        </div>
    </div>
}

<script type="text/javascript" language="javascript">
    function validate() {
        var uploadcontrol = document.getElementById('file').value;
        var reg = /^(([a-zA-Z]:)|(\\{2}\w+)\$?)(\\(\w[\w].*))+(.xls|.XLS)$/;
        if (uploadcontrol.length > 0) {

            if (reg.test(uploadcontrol)) {
                return true;
            }
            else {

                alert("Only .xls file are allowed!");
                return false;
            }
        }
        else {
            alert("First of all Download bulk jobs template and fill it carefully.. !");
            return false;
        }
    }
</script>