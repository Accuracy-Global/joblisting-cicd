@model JobPortal.Web.Models.LoginModel
@{
    ViewBag.Title = "SendOTP";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<br /><br />

      <div class="container">
          <div class="row">
              <div class="col-lg-3 col-sm-2"></div>
              <div class="col-lg-6 col-sm-8">


                  <div class="modal-content" style="font-size:18px;">

                      <!-- Modal Header -->
                      <div class="modal-header">
                          <div class="row">
                              <div class="col-sm-6"><h3 class="modal-title">Login</h3></div>
                              <div class="col-sm-5"><a href="register" class="pull-right " style="font-size:18px;">Register for free</a></div>
                              
                          </div>
                      </div>

                      <!-- Modal body -->
                      <div class="modal-body">
                          <form method="post" action="SendOTP">
                              <div class="form-group">
                                  @if (ViewBag.er != null)
                                  {<label class="text-danger">@ViewBag.er</label><br />
                              }

                                  <label for="text">Mobile  Number</label><br />
                                  <input type="text" class="form-control" id="number" placeholder="Enter Mobile Number with Country code" name="number" value="91" required style="width:70%;"><br />
                                  <label>You will receive an OTP on this number</label>
                              </div>
                              <button type="submit" class="btn btn-primary">Get OTP</button>
                          </form>
                          <br />
                          @if (ViewBag.SaveData != null)
                          {

                              <form method="post" action="Verify">
                                  <div class="form-group">
                                      <label class="text-success">@ViewBag.SaveData </label><br />
                                      <label for="text">OTP : </label><br />
                                      <input type="text" class="form-control" id="otp" placeholder="Enter OTP" name="otp" style="width:70%;" required><br />
                                      <label>An OTP has been sent to<strong class="text-success"> @ViewBag.SaveData1</strong>  You may not receive the OTP if the number is not registered with Joblisting</label>
                                      <br />

                                  </div>
                                  <button type="submit" class="btn btn-primary">&nbsp; Login &nbsp;</button>
                              </form>
                          }

                      </div>

                      <!-- Modal footer -->
                      <div class="modal-footer">
                          <h4 class="text-danger pull-left">@ViewBag.error </h4>
                      </div>

                  </div>
              </div>
              <div class="col-lg-3 col-sm-2"></div>
          </div>
      </div>

