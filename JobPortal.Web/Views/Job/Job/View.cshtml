        string days = "";
        DateTime dt1 = latestJob.DateCreated;
        DateTime dt2 = DateTime.Now;
        TimeSpan ts = dt2.Subtract(dt1);
        if (ts.Days < 1)
        {
            days = "Today";
        }
        else
        {
            if (ts.Days > 365 && ts.Days < 730)
            {
                days = "1 Year Ago";
            }
            else if (ts.Days > 730 && ts.Days < 1095)
            {
                days = "2 Years Ago";
            }
            else if (ts.Days > 1095 && ts.Days < 1460)
            {
                days = "3 Years Ago";
            }
            else if (ts.Days > 1460 && ts.Days < 1825)
            {
                days = "4 Years Ago";
            }
            else if (ts.Days > 1825 && ts.Days < 2190)
            {
                days = "5 Years Ago";
            }
