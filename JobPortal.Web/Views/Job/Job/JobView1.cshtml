<div class="section" style="padding-left: 15px; padding-right: 15px;">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @Html.Partial("_MessagePartial")
        </div>
    </div>
</div>
@if (Model != null)
{
    <div class="clear" style="height:15px;"></div>
    <div class="row alert alert-info" style="padding: 10px; background-color: white; margin: 5px 10px;  border:1px solid black;">
        @if (data.CompanySummary != null)
        {
            <div class="col-lg-1 col-md-1 col-sm-1"> </div>
            <div class="col-lg-8 col-md-8 col-sm-8" style="padding:4px; text-align:justify;">
                <div class="form-group">
                    <b>@string.Format("{0} Overview", HttpUtility.HtmlEncode(data.companyname))</b>
                    <div class="clear" style="height:5px;  color:black;">
                        @Html.Raw(data.CompanySummary)
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2" style="text-align:right">
                <a href="/@Model.EmployerLink" target="_blank"><div class="square135"></div></a>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-1"></div>
        }
        else
        {
            @Html.Raw("<h3 style=\"text-align:center\">" + Model.CompanyName + "</h3>")
        }

    </div>

    if (Model != null)
    {
        UserInfoEntity employer = (new JobPortal.Services.UserService()).Get(Model.EmployerId);
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-12"></div>
            <div class="col-lg-8 col-md-8 col-sm-12">
                <div style="text-align:center;">
                    <div class="title-login alert" style="margin-top: -5px;">
                        <h1 class="page-title">@Model.Title</h1>
                        @if (Model.IsExpired == false)
                        {
                            <small> <i class="fa fa-clock-o"></i> @Html.Raw(string.Format("Job Listed on {0}. Closing on {1}", Model.PublishedDate.ToString("MMM-dd-yyyy"), Model.ClosingDate.ToString("MMM-dd-yyyy")))  <time></time></small>
                        }
                        else
                        {
                            <small> <i class="fa fa-clock-o"></i> @Html.Raw(string.Format("Job Listed on {0}. Closing on <span style=\"color:red\">{1}</span>", Model.PublishedDate.ToString("MMM-dd-yyyy"), Model.ClosingDate.ToString("MMM-dd-yyyy")))  <time></time></small>
                        }
                        @if (user != null && user.Role != SecurityRoles.Jobseeker)
                        {
                            long inboxId = DomainService.Instance.GetInboxId(Model.EmployerId, Model.Id, 1);
                            if (Model.IsActive == true && Model.IsDeleted == false && Model.IsRejected == false && Model.IsPublished == false && Model.IsExpired == false)
                            {
                                <h3 style="color:orangered">In Approval Process</h3>
                            }
                            else if (Model.IsRejected == true && Model.IsActive == true && Model.IsDeleted == false && Model.IsExpired == false)
                            {
                                <h3 style="color:red">Rejected - See reason of rejection <a href="/inbox/show?Id=@inboxId" style="color:red">HERE</a></h3>
                            }
                            else if (Model.IsActive == false && Model.IsDeleted == false && Model.IsRejected == false && Model.IsExpired == false)
                            {
                                <h3 style="color:red">Deactivated - See reason of deactivation <a href="/inbox/show?Id=@inboxId" style="color:red">HERE</a></h3>
                            }
                            else if (Model.IsActive == true && Model.IsDeleted == false && Model.IsExpired == true)
                            {
                                <h3 style="color:red">Expired</h3>
                            }
                            else if (Model.IsDeleted)
                            {
                                <h3 style="color:red">Deleted - See reason of deletion <a href="/inbox/show?Id=@inboxId" style="color:red">HERE</a></h3>
                            }

                            if (Model.IsPaid == true)
                            {
                                if (Model.PackageId != null)
                                {
                                    Package pkg = (new JobPortal.Services.HelperService()).GetPackage(Model.PackageId.Value);
                                    if (DateTime.Now.Date <= Model.PromoteDate.Value.Date && Model.PromoteDate.Value.Date <= Model.ClosingDate.Date)
                                    {
                                        <label class="label label-success" style="padding: 5px;">PROMOTED</label>
                                    }
                                    else
                                    {
                                        if (pkg != null)
                                        {
                                            <div class="clear" style="height:15px;"></div>
                                            <label class="label label-success" style="padding: 5px; display: inline-block;">PAID - @pkg.Name.ToUpper()</label>
                                        }
                                    }
                                }

                            }
                            else
                            {
                                if (Model.PromoteDate != null && DateTime.Now.Date <= Model.PromoteDate.Value.Date && Model.PromoteDate.Value.Date <= Model.ClosingDate.Date)
                                {
                                    <div class="clear" style="height:15px;"></div>
                                    <label class="label label-success" style="padding: 5px;">PROMOTED</label>
                                }
                                else
                                {
                                    <div class="clear" style="height:15px;"></div>
                                    <label class="label label-danger" style="padding: 5px; width: 58px; display: inline-block;">UN-PAID</label>
                                }
                            }
                            string pl = string.Empty;
                            if (Model.IsActive == true && Model.IsPublished == true)
                            {
                                if (Model.IsPaid == true)
                                {
                                    if (DateTime.Now.Date > Model.PromoteDate.Value.Date && Model.PromoteDate.Value.Date <= Model.ClosingDate.Date)
                                    {
                                        pl += "&nbsp;&nbsp;" + Html.ActionLink("Promote", "Promote", "Employer", new { id = Model.Id }, new { title = "Promote", @class = "label label-success Promote", @style = "padding:5px; background-color: #34ba08; display: inline-block; " }).ToString();
                                    }

                                }
                                else if (Model.IsPaid == false)
                                {
                                    if (Model.PromoteDate != null && DateTime.Now.Date > Model.PromoteDate.Value.Date && Model.PromoteDate.Value.Date <= Model.ClosingDate.Date)
                                    {
                                        pl += "&nbsp;&nbsp;" + Html.ActionLink("PROMOTE", "Promote", "Employer", new { id = Model.Id }, new { title = "Promote", @class = "label label-success Promote", @style = "padding:5px; background-color: #34ba08; display: inline-block; " }).ToString();
                                    }
                                    else if (Model.PromoteDate == null)
                                    {
                                        pl += "&nbsp;&nbsp;" + Html.ActionLink("PROMOTE", "Promote", "Employer", new { id = Model.Id }, new { title = "Promote", @class = "label label-success Promote", @style = "padding:5px; background-color: #34ba08; display: inline-block; " }).ToString();
                                    }
                                }
                                @Html.Raw(pl)
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-2">
                <div class="form-group pull-right">
                    <label>&nbsp;</label>
                    @if (user != null && user.Type == 4)
                    {
                        <div>
                            <a href="https://apps.apple.com/in/app/job-listing/id1575724994">
                                <img src="~/Images/ios.png" style="height:40px;width:40px;" border="0" />

                            </a>


                            <a href="https://play.google.com/store/apps/details?id=com.accuracy.joblisting">
                                <img src="~/Images/android-icon.png" style="height:40px;width:40px;" border="0" />

                            </a>
                        </div>
                    }
                </div>
            </div>
            @*<div class="col-lg-1 col-md-1 col-sm-1"></div>*@
        </div>

        if (Model.ShowActionBar)
        {
            <div class="clear" style="height:20px;"></div>
            <div class="row">
                @*<div class="col-lg-1 col-md-1 col-sm-1"></div>*@
                <div class="col-md-8" style="text-align:right; margin-left:32px; padding-top:3px;">

                    @if (user != null && user.Role == SecurityRoles.Jobseeker)
                    {
                        string lnk = string.Empty;
                        if (Model.IsConnected)
                        {
                            if (Model.Messages == 0)
                            {
                                @Html.ActionLink("Message", "List", "Message", new { SenderId = employer.Id, redirect = Request.Url.ToString() }, new { @class = "btn btn-info" });
                            }
                            else
                            {
                                string link = string.Empty;
                                if (Model.Messages > 0)
                                {
                                    link = string.Format("Message ({0})", Model.Messages);
                                }
                                else
                                {
                                    link = "Message";
                                }
                                @Html.ActionLink(link, "List", "Message", new { SenderId = employer.Id, redirect = Request.Url.ToString() }, new { @class = "btn btn-info" });
                            }

                            if ((Model.ClosingDate.Date >= DateTime.Now.Date) && (Model.IsDeleted == false) && counter < 1)
                            {
                                if (!Roles.IsUserInRole(username, "Administrator") && !Roles.IsUserInRole(username, "SuperUser"))
                                {
                                    if (user.Role == SecurityRoles.Employers)
                                    {
                                        @Html.Raw("&nbsp;")
                                        @Html.ActionLink("Apply", "Apply", "job", new { JobId = @Model.Id, redirect = "/Jobseeker/Index" }, new { @class = "btn btn-info", id = "ApplyJobs", @style = "width:75px;", onclick = "alert('Please Login or Register account as Jobseeker to apply on this job!'); return false;" })
                                    }
                                    else
                                    {
                                        @Html.Raw("&nbsp;")
