    {
        padding-top: 0px;
        padding-bottom: 0px;
        margin-right: -15px;
        padding-left: 15px;
        padding-right: 15px;
    }
    .bs-callout p
    {
        word-wrap: break-word;
    }
    .safety{
        min-height: 155px;
        height: 100%;
        padding: 10px;
        font-size: 12px;
        background-color: #f5f5f5;
        margin-bottom: 5px;
    }
