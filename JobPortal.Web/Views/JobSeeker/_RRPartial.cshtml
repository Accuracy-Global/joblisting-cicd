@model JobPortal.Web.Models.JobseekerProfileModel
@using JobPortal.Data
@using JobPortal.Domain
@using JobPortal.Library.Enumerators
@using JobPortal.Library.Helpers
@using JobPortal.Web.Models
@using JobPortal.Models
@{
    UserInfoEntity user = null;
    if (User != null)
    {
        user = User.Info;

    }


}
@{ List<User_Experience> exprlist;
    if (ViewBag.rrList != null)
    {
        exprlist = ViewBag.rrList;
        for (int j = 0; j < exprlist.Count; j++)
        {
            var resultm = exprlist[j].ToYr - exprlist[j].FromYr;
            var result1 = exprlist[j].ToMonth - exprlist[j].FromMonth;
            string yers = resultm.ToString() + " Yrs " + result1.ToString() + " Months";


            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="col-lg-1 col-md-1 col-sm-1" style="font-family: Verdana">
                        Role
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3" style="font-family: Verdana">

                        @exprlist[j].Roles

                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3" style="font-family: Verdana">
                        From  @exprlist[j].FromMonth-@exprlist[j].FromYr
                    </div>
                    <div class="col-lg-5 col-md-5 col-sm-5" style="font-family: Verdana">

                        To  @exprlist[j].ToMonth-@exprlist[j].ToYr (@yers)


                    </div>
                </div>
            </div>
            <br>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="col-lg-5 col-md-5 col-sm-5" style="font-family: Verdana">
                        <b>Roles & Responsibilites</b>
                    </div>
                </div>
            </div>
            <br>
            <div class="row">
                @{string rowi1 = "rd" + j.ToString();
                    string rowi2 = "rdd" + j.ToString();}
                <div class="col-lg-12 col-md-12 col-sm-12" id="@rowi1" onmouseenter="myEnterFunctionr('@j');" onmouseleave="myLeaveFunctionr('@j');">

                    <div class="col-lg-11 col-md-11 col-sm-11" style="font-family: Verdana">
                        @Html.Raw(exprlist[j].Responsibilities.Replace("[", "<").Replace("]", ">").Replace("'", "\"").Replace("andnbsp", "&nbsp;"))
                    </div>
                    <div style="float: right;display:none" id="@rowi2">
                        @{string rowid = "respname" + j.ToString();}

                        <input type="hidden" id="@rowid" name="@rowid" value="@exprlist[j].Responsibilities.Replace("[", "<").Replace("]", ">").Replace("'", "\"").Replace("andnbsp", "&nbsp;")" />



                        <button type="button" class="btn btn-primary float-right" width="14" height="14"
                                onclick="LoadEditExp('@exprlist[j].FromMonth', '@exprlist[j].ToMonth', '@exprlist[j].FromYr', '@exprlist[j].ToYr', '@exprlist[j].Roles','@j');"
                                data-toggle="modal" data-target="#exampleModalrr">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-pencil" viewBox="0 0 14 14">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                            </svg>
                        </button>


                    </div>
                </div>
            </div>


            <br>


        }
    }

}



<script>
    function myEnterFunctionr(n4) {
        var cont9 = document.getElementById('rdd' + n4);
        cont9.style.display = "block";
    }
    function myLeaveFunctionr(n4) {
        var cont10 = document.getElementById('rdd' + n4);
        cont10.style.display = "none";
    }
    function LoadEditExp(fmonth, tmonth, fromyr, toyr, role, j) {
        $("#address").html($("#respname" + j).val());

        $("#FromMonth").val('0' + fmonth);
        $("#ToMonth").val('0' + tmonth);
        $("#fromyr").val(fromyr);
        $("#toyr").val(toyr);
        $("#Role").val(role);


    }
  

</script>
