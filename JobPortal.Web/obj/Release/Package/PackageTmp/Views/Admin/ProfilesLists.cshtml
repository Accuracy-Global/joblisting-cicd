<div id="container-grid" class="table-responsive" style="table-layout:fixed;  width: 100%;">
    <table cellpadding="0" cellspacing="0">
        <tr>

            <th>Name</th>
            <th> Skills</th>
            <th> Emails</th>
            <th> Phone</th>
            <th> Location</th>

            <th> Actions</th>
        </tr>
        @foreach (var itemss in ViewBag.profiles)
        {
            <tr>
                <td> @itemss.FirstName  @itemss.LastName </td>
                <td>@itemss.Title </td>
                <td> @itemss.Username </td>
                <td>
                    @if (itemss.Mobile == null)
                    {
                        itemss.Mobile = "null";
                    }
                    @itemss.Mobile
                </td>
                <td>
                    @if (itemss.CountryName == null)
                    {
                        itemss.CountryName = "null";
                    }
                    @itemss.CountryName
                </td>

                <td>
                    <a href="#"><i class='fa fa-phone'></i></a>  |  <a href='@Url.Action("EmailforList", "Job", new { mobcode = @itemss.FirstName,name=@itemss.Username,title=@itemss.Title,link=@itemss.Title,id=12354 })'><i class='fa fa-envelope'></i></a>  |  @if (itemss.Mobile == null || itemss.Mobile == "" || itemss.Mobile == "null")
                    {<a href="#" onClick="geeks();"><i class='fa fa-comment'></i></a> }
                    else
                    {<a href='@Url.Action("SmsList", "Job", new {id=itemss.Id, mob = itemss.Mobile,title=@itemss.PermaLink })' ><i class='fa fa-comment'></i></a>}  |  <a href="#" onClick="geeks1();"><i class='fa fa-download'></i></a>
                </td>
            </tr>
        }
    </table>
    <div style="text-align:center; margin-top: -15px;" id="paginationDiv">
        @Html.PagedListPager(pagedModel, i => Url.Action("profileslists", "admin", new { i }))
    </div>
</div>



