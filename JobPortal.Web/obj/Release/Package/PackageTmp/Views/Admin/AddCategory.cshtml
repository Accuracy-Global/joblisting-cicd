@model JobPortal.Web.Models.CategoryModel

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="title-login">
    <h1>Category</h1>
    Add new category here
</div>
<div class="clear" style="height:15px;"></div>
@using (Html.BeginForm())
{
    <div>
        @Html.ValidationSummary(true)

        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="form-group">
                    @Html.Label("Category Name")

                    @Html.TextBoxFor(model => model.Name, new { placeholder = "CATEGORY NAME", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Title) (For SEO)

                    @Html.TextBoxFor(model => model.Title, new { placeholder = "TITLE", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Keywords) (For SEO)

                    @Html.TextAreaFor(model => model.Keywords, htmlAttributes: new { @class = "form-control", @style = "width: 100%; height:66px" })

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Description) (For SEO)

                    @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", @style = "width: 100%; height:66px" })

                </div>
            </div>
        </div>
        <div class="clear" style="height:15px;"></div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 text-right">
                <div class="form-group">

                    <input type="submit" value="Save" class="btn btn-info" style="width:75px" /> @Html.ActionLink("Back", "CategoryList", null, new { @class = "btn btn-info", @style = "width:75px" })

                </div>
            </div>
        </div>
    </div>
}
