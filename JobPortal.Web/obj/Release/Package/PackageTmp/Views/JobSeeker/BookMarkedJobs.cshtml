                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>

                        </div>
                    </div>
                    <div class="clear" style="height:15px"></div>
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-12 col-lg-offset-8 col-md-offset-8">
                            <input type="submit" id="manage" value="Search" class="btn btn-info btn-block" style="background-color:#34ba08" />
                        </div>
                    </div>
                    <div class="clear" style="height:15px"></div>
                }
            </div>
        </div>
        <div class="clear" style="height:15px;"></div>
        <div id="ResultArea"></div>
        @*<a id="ViewMore" class="btn btn-primary btn-block hide" style="width:100%;">View More</a>*@
    </div>

</div>
<script>
    var page = 1;
    var pages = 1;
    $(document).ready(function () {
        $.getJSON("/help/countrylist", {}, function (list) {
            $("#CountryId").empty();
            $("#CountryId").append("<option value = ''>SELECT</option>");

            if (list.length != 0) {
                $(list).each(function () {
                    $("#CountryId").append("<option value =" + this.Id + ">" + this.Name + "</option>");
                });
            }
        });

        $.post("/jobseeker/BookmarkedCompanies", {}, function (result) {
            if (result.length > 0) {
                $("#EmployerId").empty();
                $("#EmployerId").append("<option value =\"\">SELECT</option>");
                $.each(result, function () {
                    $("#EmployerId").append("<option value =" + this.UserId + ">" + this.Company + "</option>");
                });
            }
        });

        $.post("/jobseeker/bookmarkedjobs", { pageNumber: page }, function (result) {
            if (result.length > 0) {
                var rows = result[0].MaxRows;
                pages = Math.ceil(rows / 10);
                $.each(result, function () {
                    this.authenticated = "@Request.IsAuthenticated";
                    this.role = "@user.Role.GetDescription()";
                    $("#ResultItem").tmpl(this).appendTo("#ResultArea");
                });
            }

            if (page < pages) {
                $("#ViewMore").removeClass("hide");
                $("#ViewMore").addClass("show");
            } else {
                $("#ViewMore").removeClass("show");
                $("#ViewMore").addClass("hide");
            }
        });

        @*$("#manage").click(function () {
            $("#waitDialog").modal("show");
            var json = $("#manage").closest("form").serializeObject();
            json.pageNumber = 1;
            $.post("/jobseeker/bookmarkedjobs", json, function (result) {
