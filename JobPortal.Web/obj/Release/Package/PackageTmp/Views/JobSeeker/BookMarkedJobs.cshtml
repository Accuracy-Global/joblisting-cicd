                                        &nbsp;|&nbsp;<b><a href="/Home/Connect?id=${UserId}&redirect=@Request.Url.ToString()" title="Connect" target="_blank">Connect</a></b>
                                    </li>
                                    {{/if}}
                                    {{/if}}

                                    @*{{if BlockedByMe > 0 }}
