@model JobPortal.Web.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="section">
    <div class="title-login">
        <h1>Forgot Password</h1>
    </div>
    <div class="clear" style="height:15px"></div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post, new { @autocomplete = "off" }))
            {
                <div class="well">
                    <div class="errorSummary">
                        @Html.ValidationSummary(true)
                    </div>
                    <div class="form-group">
                        @Html.Label("Provide your email address here")
                        @Html.TextBoxFor(m => m.Email, null, new { placeholder = "Your Email Address", title = "Provide your email address", @class = "form-control", @maxlength = 250 })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <input name="Submit" type="submit" value="Proceed" class="btn btn-info" />

                </div>
            }
        </div>
    </div>
    <div class="clear" style="height:50px;"></div>
</div>
