@if (ViewBag.Type == "R")
{
    string jlink = string.Format("<a href=\"/{0}\" target=\"_blank\">{1}</a>", ViewBag.Entity.PermaLink, ViewBag.Entity.Title);
    string nlink = string.Format("<a href=\"/{0}\" target=\"_blank\">{1}</a>", ViewBag.Entity.PermaLink, ViewBag.Entity.FullName);
    country = SharedService.Instance.GetCountry(ViewBag.Entity.CountryId);
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="list-group">
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-lg-6 col-md-4 col-sm-4">
                            <i><b>Name:</b></i> @Html.Raw(nlink)
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <i><b>Gender:</b></i> @ViewBag.Entity.Gender  <i><b>Age:</b></i> @ViewBag.Entity.Age
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-4 col-sm-4">
                            <i><b>Job Title:</b></i> @Html.Raw(jlink)
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <i><b>Country:</b></i> @country.Text
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-15 col-md-12 col-sm-8">
            <div class="list-group">
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <span style="font-weight:bold;color:red">Apply promo/voucher code to download resume for FREE</span>  <i class="fa fa-angle-down" style="font-size:26px;" data-toggle="collapse" data-target="#toggle"></i>
                        </div>
                    </div>

                    <div id="toggle" class="collapse">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="list-group-item" style="padding:15px;background-color:#efeeee;">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4">
                                            <div class="form-group">
                                                <input id="Token" name="Token" type="text" placeholder="Verification Code" maxlength="10" style="font-size: 18px; text-align:center" class="form-control" required oninvalid="this.setCustomValidity('Please enter verification code!')" oninput="this.setCustomValidity('')" />
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-4">
                                            <div class="form-group">
                                                <button type="submit" id="Verify" class="btn btn-primary btn-block" style="background-color: #34ba08; height:32px; font-size:16px; width:120px;">Verify</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
