    <div class="row" id="eArea">
        <div class="col-lg-12 col-md-12" style="margin-bottom:15px;min-height:236px;">
            <div class="price">
                <form id="PromoteForm" method="post" action="/package/processdownload">
                    <input type="hidden" id="ReturnUrl" name="ReturnUrl" value="@Request.QueryString["returnUrl"]" />
                    <input type="hidden" id="Type" name="Type" value="@ViewBag.Type" />
                    <input type="hidden" id="Id" name="Id" value="@ViewBag.Entity.Id" />
                    <table class="table-bordered table-condensed" style="width:100%;">
                        <thead class="header">
                            <tr>
                                <th style="font-weight:normal">Package Items</th>
                                <th style="font-weight:normal; width:85px; text-align:center">
                                    Resumes
                                </th>
                            </tr>
                        </thead>
                        @if (ViewBag.BuyResume != null)
                        {
                            <tbody>
                                <tr>
                                    <td style="font-weight:normal; text-align:left" class="grey">
                                        Resumes Download
                                    </td>
                                    <td style="font-weight:normal; width:125px; text-align:right" class="grey">
                                        <select id="Days" name="Days" class="form-control" required data-resumes="@ViewBag.BuyResume.Resumes" data-rate="@ViewBag.BuyResume.Rate" data-pkgid="@ViewBag.BuyResume.PackageId">
                                            <option value="">Resumes</option>
                                            @for (int i = ViewBag.BuyResume.Resumes; i <= ViewBag.BuyResume.Resumes * 10; i = i + 10)
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        </select>
                                    </td>
                                </tr>
                            </tbody>

                        }
