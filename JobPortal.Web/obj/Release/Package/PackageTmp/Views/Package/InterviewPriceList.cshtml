<div class="row">
    <div class="col-lg-12 col-md-12" style="margin-bottom:15px;min-height:236px;">
        <div class="price">
            <form id="PromoteForm" method="post" action="/package/processinterview">
                <input type="hidden" id="ReturnUrl" name="ReturnUrl" value="@Request.QueryString["returnUrl"]" />
                <input type="hidden" id="Type" name="Type" value="@ViewBag.Type" />
                <input type="hidden" id="SessionId" name="SessionId" value="@ViewBag.SessionId" />
                <table class="table-bordered table-condensed" style="width:100%;">
                    <thead class="header">
                        <tr>
                            <th style="font-weight:normal">Package Items</th>
                            <th style="font-weight:normal; width:85px; text-align:center">
                                Interviews
                            </th>
                        </tr>
                    </thead>
                    @if (ViewBag.BuyInterview != null)
                    {
                        int ints = ViewBag.BuyInterview.Interviews;
                        <tbody>
                            <tr>
                                <td style="font-weight:normal; text-align:left" class="grey">
                                    Online Interviews
                                </td>
                                <td style="font-weight:normal; width:125px; text-align:right" class="grey">
                                    <select id="Days" name="Days" class="form-control" required data-interviews="@ints" data-rate="@ViewBag.BuyInterview.Rate" data-pkgid="@ViewBag.BuyInterview.PackageId">
                                        <option value="">Interviews</option>
                                        @for (int i = ints; i <= ints * 10; i = i + ints)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </td>
                            </tr>
                        </tbody>

                    }
                    <tfoot class="footer">
                        <tr>
                            <td style="font-weight:normal; text-align:right; border:none">
                                Total Amount:
                            </td>
                            <td style="font-weight:normal; text-align:right; border:none">
                                <span id="amount"></span>
                                <input type="hidden" id="TotalAmount" name="TotalAmount" />
                            </td>
                        </tr>
                    </tfoot>
                </table>
                <input type="hidden" id="PackageId" name="PackageId" value="@ViewBag.BuyInterview.PackageId" />
                <div class="footer" style="text-align:center"><button type="submit" id="btnSubmit" class="btn btn-info" style="width:175px;">Initiate&nbsp;Interview&nbsp;Now</button></div>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('[data-toggle="tooltip"]').tooltip({ placement: "bottom" });
        $("#Days").val(@ViewBag.BuyInterview.Interviews);
        getTotal();

        $("#Days").change(function () {
            getTotal();
        });
    });
    function getTotal() {
        var total = 0;
        var rpd = $("#Days").data("rate");
        var res = $("#Days").data("interviews");
        var rs = $("#Days").val();
        total = (rpd * (rs / res));
        $("#amount").text("$" + total.toFixed(0));
        $("#TotalAmount").val(total.toFixed(0));
    }

