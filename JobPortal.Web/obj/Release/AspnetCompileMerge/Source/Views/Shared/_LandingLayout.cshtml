    <style>
        body{
            overflow-x:hidden;
        }
        .navbar-inverse .navbar-nav > li > a {
            font-weight: normal;
            font-size: smaller;
            padding: 5px 5px;
            font-family: Tahoma;
        }

        .active2 {
            padding: 5px 5px;
        }

            .active2 a {
                font-weight: normal !important;
                font-size: small !important;
                background-color: #00a6e0;
                color: #fff !important;
                border-radius: 1px;
                padding-left: 3px !important;
                padding-right: 3px !important;
                padding-top: 1px !important;
                padding-bottom: 1px !important;
                font-family: Tahoma !important;
            }

                .active2 a:hover {
                    background-color: #00a6e0 !important;
                    color: #fff !important;
                }

        .soc {
            display: block;
            font-size: 0;
            list-style: none;
            margin: 0;
        }

            .soc, .soc em {
                text-align: center;
            }

                .mstyle, .soc em {
                    bottom: 0;
                    left: 0;
                }

                .soc li {
                    display: inline-block;
                    margin-left: 3px;
                    /*margin-right: 3px;*/
                }

                .soc button, .soc svg {
                    display: block;
                }

                .soc button {
                    position: relative;
                    height: 34px;
                    width: 34px;
                    padding: 5px;
                    border-radius: 100%;
                    border: 2px solid #fff;
                    cursor: pointer;
                    font-weight: bold;
                }

                .soc svg {
                    height: 100%;
                    width: 100%;
                }

                .soc em {
                    font-size: 14px;
                    line-height: 1.5;
                    margin-top: -.75em;
                    position: absolute;
                    top: 50%;
                    right: 0;
                }

        .icon-10 {
            color: #fff;
            fill: #fff;
            background: #4060a5;
            border: 2px solid #4060a5;
        }

            .icon-10:hover {
                background-color: #fff;
                color: #4060a5;
                fill: #4060a5;
                border: 2px solid #4060a5;
            }

        .icon-14 {
            color: #fff;
            fill: #fff;
            background: #e64522;
            border: 2px solid #e64522;
        }

            .icon-14:hover {
                background-color: #fff;
                color: #e64522;
                fill: #e64522;
                border-color: #e64522;
            }

        .icon-17 {
            color: #fff;
            fill: #fff;
            background-color: #0094bc;
            border: 2px solid #0094bc;
        }

            .icon-17:hover {
                background-color: #fff;
                color: #0094bc;
                fill: #0094bc;
                border-color: #0094bc;
            }

        .icon-26 {
            color: #fff;
            fill: #fff;
            background-color: #00abe3;
            border: 2px solid #00abe3;
        }

            .icon-26:hover {
                background-color: #fff;
                color: #00abe3;
                fill: #00abe3;
                border-color: #00abe3;
            }
