        <div class="title-login">
            <h1 style="margin-top:-15px">Contents Management</h1>
            Manage contents here
        </div>
    </div>
    <div class="clear" style="height:15px;"></div>
    <div class="col-lg-2 col-md-2 col-sm-2">
        <div class="clear" style="height:20px;"></div>
        @*@Html.ActionLink("Home", "Index", null, new { title = "List Job", @class = "btn btn-info btn-block" })*@
    </div>
