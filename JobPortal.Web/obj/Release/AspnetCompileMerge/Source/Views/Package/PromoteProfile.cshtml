<script type="text/javascript">
    $(function () {
        $('[data-toggle="tooltip"]').tooltip({ placement: "bottom" });
        $("#Days").val(1);
        getTotal();

        $("#Days").change(function () {
            getTotal();
        });

        $("#Example").click(function () {
            $("#exampleDialog").modal("show");                        
        });
        
    });
    function getTotal() {
        var total = 0;
        var rpd = $("#Days").data("rate");
        var jr = $("#Days").data("jobrate");
        var days = $("#Days").val();
        var aid = $("#Days").data("total");
        $(aid).text("$" + (rpd * days).toFixed(2));
        total = (rpd * days);
        total = total + Number(jr);
        $("#amount").text("$" + total.toFixed(0));
        $("#TotalAmount").val(total.toFixed(0));
    }

</script>