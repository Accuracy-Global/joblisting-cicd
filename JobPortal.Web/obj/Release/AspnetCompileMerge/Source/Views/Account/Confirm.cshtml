@{
    ViewBag.Title = "Verify";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

@using (Html.BeginForm("Confirm", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "VerifyForm", @autocomplete = "off" }))
{
    <input type="hidden" id="id" name="id" value="@ViewBag.Id" />
    <div class="text-center" style="padding-top:30px;">
        @if (TempData["Error"] != null)
        {
            <div style="font-size:20px; font-weight:lighter; color:red">@Convert.ToString(TempData["Error"])</div>
        }
        else
        {
            <h1>Verify Your Email!</h1>
            <div style="font-size:20px; font-weight:lighter">We have sent an email with verification code and link to your email address: <b>@ViewBag.Email</b></div>
        }
        <div style="font-size:20px; font-weight:lighter; padding-top:15px;">
            <div class="row">
                <div class="col-lg-4 col-md-4"></div>
                <div class="col-lg-2 col-md-2">
                    <div class="form-group">
                        <input id="Token" name="Token" type="text" placeholder="Verification Code" maxlength="6" style="font-size: 18px; text-align:center" class="form-control" required oninvalid="this.setCustomValidity('Please enter verification code!')" oninput="this.setCustomValidity('')" />
                    </div>
                </div>
                <div class="col-lg-2 col-md-2">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block" style="background-color:#00a6e0; height:32px; font-size:16px; width:120px;">Verify</button>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4"></div>
            </div>
            <div class="row" style="padding-top: 15px;">
                <div class="col-lg-12 col-md-12">
                    <p>
                        If you did not get email, <b><a href="/account/resend?id=@ViewBag.Id&returnUrl=@ViewBag.ReturnUrl">CLICK HERE</a></b> to resend verification email.<br />
                        If you want to change your email, <b><a href="/account/changeemailaddress?email=@ViewBag.Email&returnUrl=@ViewBag.ReturnUrl">CLICK HERE</a></b> now.
                    </p>
                </div>
            </div>
        </div>
        <div style="font-size:24px; font-weight:lighter; padding-top:15px;">
            <div class="row">
                <div class="col-lg-4 col-md-4"></div>
                <div class="col-lg-4 col-md-4">
                    <a href="/account/resend?id=@ViewBag.Id&returnUrl=@ViewBag.ReturnUrl" class="btn btn-primary" style="background-color:#00a6e0; color:white; width:120px; font-size:16px">Resend Email</a>
                    <a href="/account/changeemailaddress?email=@ViewBag.Email&returnUrl=@ViewBag.ReturnUrl" class="btn btn-primary" style="background-color:#00a6e0; color:white; width:120px; font-size:16px">Change Email</a>
                </div>
                <div class="col-lg-4 col-md-4"></div>
            </div>
        </div>
        <div style="height:30px;"></div>
        <hr />
        <div>
            <h4>Invite contacts and build network now!</h4>
        </div>
        <div>
            <a href="/network/yahoo" target="_blank" style="width:48px; height:32px; padding:5px; display:inline-block; cursor:pointer" title="Import contact from Yahoo Mail">
                <img src="~/images/yahoo.png" alt="" height="32" width="32">
            </a>
            <a href="/network/google" target="_blank" style="width:48px; height:32px; padding:5px; display:inline-block; cursor:pointer" title="Import contacts from Gmail">
                <img src="~/images/gmail.png" alt="Gmail" height="32" width="32">
            </a>
            <a href="/network/live" target="_blank" style="width:48px; height:32px; padding:5px; display:inline-block; cursor:pointer" title="Import contacts from Outlook">
                <img src="~/images/outlook.png" alt="outlook" height="32" width="32" />
            </a>

            <a role="button" data-toggle='modal' data-target='#uploadDialog' style="width:48px; height:32px; padding:5px; display:inline-block; cursor:pointer" title="Import contacts by Uploading .csv file">
                <img src="~/images/File-CSV-icon.png" alt="CSV File Upload" height="32" width="32" />
            </a>
        </div>
    </div>
}
