        }

            .icon-14:hover {
                background-color: #fff;
                color: #e64522;
                fill: #e64522;
                border-color: #e64522;
            }

        .icon-17 {
            color: #fff;
            fill: #fff;
            background-color: #0094bc;
            border: 2px solid #0094bc;
            height: 32px;
            width: 32px;
            border-radius: 100%;
        }

            .icon-17:hover {
                background-color: #fff;
                color: #0094bc;
                fill: #0094bc;
                border-color: #0094bc;
